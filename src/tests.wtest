import example.*

describe "Test para comprobacion de poder total base" {

	test "El poder total de ciclope es 60" {
		assert.equals(60, ciclope.poderTotal())
	}

	test "El poder total de Fénix no es 80, es 120" {
		assert.equals(120, fenix.poderTotal())
	}

	test "El poder total de iceman es 20" {
		assert.equals(20, iceman.poderTotal())
	}

	test "El poder total de quicksilver es 60" {
		assert.equals(60, quicksilver.poderTotal())
	}
}

describe "Test para las habilidades que pueden aprender los estudiantes"{
	test "iceman puede aprender supervelocidad" {
		const supervelocidad = new Supervelocidad()
		assert.that(iceman.puedeAprender(supervelocidad))
	}

	test "fenix no puede aprender supervelocidad" {
		const supervelocidad = new Supervelocidad()
		assert.notThat(fenix.puedeAprender(supervelocidad))
	}

	test "fenix no puede aprender explosion optica" {
		assert.notThat(fenix.puedeAprender(new ExplosionOptica()))
	}

	test "ciclope no puede aprender transformacion" {
		assert.notThat(ciclope.puedeAprender(new Transformacion()))
	}

	test "Quicksilver no puede aprender telepatía porque no puede aprenderse" {
		assert.notThat(quicksilver.puedeAprender(new Telepatia()))
	}

	test "Ciclope aprende aprende supervelocidad y transformacion" {
		ciclope.aprenderHabilidad(new Supervelocidad())
		ciclope.aprenderHabilidad(new Transformacion())
		const habilidades = [new ExplosionOptica(nivel=11), new Supervelocidad(), new Transformacion()]
		assert.equals(habilidades,ciclope.habilidades())
	}

	test "Fenix aprende transformacion y luego explosionOptica" {
		fenix.aprenderHabilidad(new Transformacion())
		fenix.aprenderHabilidad(new ExplosionOptica())
		assert.equals([new Telepatia(nivel=13),new Transformacion(), new ExplosionOptica()],fenix.habilidades())
	}

	test "Iceman puede aprender Transformación y Supervelocidad" {
		iceman.aprenderHabilidad(new Supervelocidad())
		assert.equals([new Transformacion(nivel=7), new Supervelocidad()],iceman.habilidades())
	}

	test "Ciclope no puede aprender Explosion optica" {
		ciclope.aprenderHabilidad(new ExplosionOptica())
		assert.equals([new ExplosionOptica(nivel=11)],ciclope.habilidades())
	}

	test "Quicksilver no puede aprender telepatia" {
		quicksilver.aprenderHabilidad(new Telepatia())
		assert.equals([new Supervelocidad(nivel=9)],quicksilver.habilidades())
	}	
	
	test "Ningun mutante puede aprender telepatía"{
		assert.notThat(quicksilver.puedeAprender(new Telepatia()))
		assert.notThat(ciclope.puedeAprender(new Telepatia()))
		assert.notThat(fenix.puedeAprender(new Telepatia()))
		assert.notThat(iceman.puedeAprender(new Telepatia()))
	}
}